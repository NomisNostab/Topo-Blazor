@page "/members"
@inherits Controller.MembersController

<EditForm Model="@model">

    <div class="mt-3 mb-3 row">
        <h2>Members</h2>
    </div>

    <div class="form-group mb-3 row">
        <label for="unit" class="col-sm-2 col-form-label">
            Select Unit
        </label>
        <div class="col-sm-2">
            <select id="unit" class="form-select" value="@model.UnitId" @onchange="UnitChange">
                @foreach (var unit in model.Units)
                {
                    <option value="@unit.Key">@unit.Value</option>
                }
            </select>
        </div>
    </div>

    @if (model.Members != null && model.Members.Any())
    {
        <div class="row">
            <div class="col">
                <strong>First Name</strong>
            </div>
            <div class="col">
                <strong>Last Name</strong>
            </div>
            <div class="col">
                <strong>Member Number</strong>
            </div>
            <div class="col">
                <strong>Patrol</strong>
            </div>
            <div class="col">
                <strong>Role</strong>
            </div>
            <div class="col">
                <strong>Unit Council</strong>
            </div>
        </div>

        @foreach (var item in model?.Members)
        {
            <div class="row">
                <div class="col">
                    @item.first_name
                </div>
                <div class="col">
                    @item.last_name
                </div>
                <div class="col">
                    @item.member_number
                </div>
                <div class="col">
                    @item.patrol_name
                </div>
                <div class="col">
                    @item.patrol_duty
                </div>
                <div class="col align-content-center">
                    @(item.unit_council ? "Yes" : "")
                </div>
            </div>
        }

        <div class="mt-3 mb-3 row">
            <div class="col-sm-3">
                <button type="submit" name="button" value="PatrolListPdf" class="btn btn-primary">Generate Patrol list (pdf)</button>
            </div>
            <div class="col-sm-3">
                <button type="submit" name="button" value="PatrolListXlsx" class="btn btn-success">Generate Patrol list (xlsx)</button>
            </div>
            <div class="col-sm-3 form-check">
                <InputCheckbox id="includeLeaders" class="form-check-input"
                           @bind-Value="model.IncludeLeaders" />
                <label for="unit" class="form-check-label">
                    Include Leaders
                </label>
            </div>
        </div>
        <div class="mt-3 mb-3 row">
            <div class="col-sm-3">
                <button type="submit" name="button" value="MemberListPdf" class="btn btn-primary">Generate Member list (pdf)</button>
            </div>
            <div class="col-sm-3">
                <button type="submit" name="button" value="MemberListXlsx" class="btn btn-success">Generate Member list (xlsx)</button>
            </div>
        </div>
        <div class="mt-3 mb-3 row">
            <div class="col-sm-3">
                <button type="submit" name="button" value="PatrolSheetPdf" class="btn btn-primary">Generate Patrol sheets (pdf)</button>
            </div>
            <div class="col-sm-3">
                <button type="submit" name="button" value="PatrolSheetXlsx" class="btn btn-success">Generate Patrol sheets (xlsx)</button>
            </div>
        </div>
    }

</EditForm>

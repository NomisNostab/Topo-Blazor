@page "/sia"
@inherits Controller.SIAController

<PageTitle>Topo / SIA</PageTitle>

<EditForm Model="@model">
    <div class="mt-3 mb-3 row">
        <h2>Members</h2>
    </div>

    <div class="form-group mb-3 row">
        <label for="unit" class="col-sm-2 col-form-label">
            Select Unit
        </label>
        <div class="col-sm-2">
            <select id="unit" class="form-select" value="@model.UnitId" @onchange="UnitChange">
                @foreach (var unit in model.Units)
                {
                    <option value="@unit.Key">@unit.Value</option>
                }
            </select>
        </div>
    </div>

    @if (model.Members != null && model.Members.Any())
    {
        <div>
            <input type="checkbox" id="checkall" @onchange="SelectAllChange" /><span> Select All</span>
        </div>

        <div class="row">
            <div class="col">
                <strong>Select</strong>
            </div>
            <div class="col">
                <strong>First Name</strong>
            </div>
            <div class="col">
                <strong>Last Name</strong>
            </div>
            <div class="col">
                <strong>Member Number</strong>
            </div>
            <div class="col">
                <strong>Patrol</strong>
            </div>
            <div class="col">
                <strong>Role</strong>
            </div>
            <div class="col">
                <strong>Unit Council</strong>
            </div>
        </div>

        @foreach (var item in model?.Members)
        {
            <div class="row">
                <div class="col">
                    <InputCheckbox @bind-Value="item.selected"></InputCheckbox>
                </div>
                <div class="col">
                    @item.first_name
                </div>
                <div class="col">
                    @item.last_name
                </div>
                <div class="col">
                    @item.member_number
                </div>
                <div class="col">
                    @item.patrol_name
                </div>
                <div class="col">
                    @item.patrol_duty
                </div>
                <div class="col align-content-center">
                    @(
                        item.unit_council ? "Yes" : ""
                        )
                </div>
            </div>
        }

        <div class="mt-3 mb-3 row">
            <div class="col-sm-3">
                <button type="submit" name="button" @onclick="SIAReportPdfClick" class="btn btn-primary">SIA Report (pdf)</button>
            </div>
            <div class="col-sm-3">
                <button type="submit" name="button" @onclick="SIAReportXlsxClick" class="btn btn-success">SIA Report (xlsx)</button>
            </div>
        </div>
    }

</EditForm>
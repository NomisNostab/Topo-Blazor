@page "/progress/progress"
@inherits Controller.ProgressController

<PageTitle>Topo / Progress</PageTitle>

<EditForm Model="@model">

    <div class="mt-3 mb-3 row">
        <h2>Progress @model.GroupName</h2>
    </div>

    <div class="form-group mb-3 row">
        <label for="unit" class="col-sm-2 col-form-label">
            Select Unit
        </label>
        <div class="col-sm-3">
            <select id="unit" class="form-select" value="@model.UnitId" @onchange="UnitChange">
                <option value="">Select unit</option>
                @foreach (var unit in model.Units)
                {
                    <option value="@unit.Key">@unit.Value</option>
                }
            </select>
        </div>
        <div class="col-sm-7">
        </div>
    </div>

    @if (model.Members != null && model.Members.Any())
    {
        <div class="row header">
            <div class="col-sm">
                <strong>First Name</strong>
            </div>
            <div class="col-sm">
                <strong>Last Name</strong>
            </div>
            <div class="col-sm">
                <strong>Member Number</strong>
            </div>
            <div class="col-sm">
                <strong>Patrol</strong>
            </div>
            <div class="col-sm">
                <strong>Role</strong>
            </div>
            <div class="col-sm">
                <strong>Unit Council</strong>
            </div>
            <div class="col-sm">
            </div>
        </div>

        @foreach (var item in model?.Members)
        {
            <div class="row striped">
                <div class="col-sm">
                    @item.first_name
                </div>
                <div class="col-sm">
                    @item.last_name
                </div>
                <div class="col-sm">
                    @item.member_number
                </div>
                <div class="col-sm">
                    @item.patrol_name
                </div>
                <div class="col-sm">
                    @item.patrol_duty
                </div>
                <div class="col-sm align-content-center">
                    @(item.unit_council ? "Yes" : "")
                </div>
                <div class="col-sm">
                    <a href="progress/details/@item.id" class="btn btn-link pt-0 pb-0">Progress</a>
                </div>
            </div>
        }

        <div class="mt-3 mb-3 row">
            <div class="col-sm">
            </div>
        </div>
        <div class="mt-3 mb-3 row">
            <div class="col-sm">
            </div>
        </div>
        <div class="mt-3 mb-3 row">
            <div class="col-sm">
            </div>
        </div>
    }

</EditForm>

